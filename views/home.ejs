<html>
    <head>
    <title>
        <%=locals.title %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- we will use added styles above our css -->


    <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
       <h1 id="page-heading">
           <i class="fa fa-address-book"></i>
            MY_Contact_List</h1>

       <div id="div1">
           
           
               <% for ( let i of contact_list ) { %> 
                <div id="div2">
                    <p><%= i.name %><%=' '%><%= i.phone %> </p>
                </div>
                <div id="delete-button">
                    <a href="/delete-contact/?id=<%=i._id %>">
                        <i class="fa fa-window-close"></i>
                    </a>

                </div>
                
                <% } %>
               
           
       </div>
       <form action="create-contact" method="POST">
        <input id="name1" type="text" name="name" placeholder="Enter-Name" required>
        <input id="number1" type="number" name="phone" placeholder="Enter-phoneNo." required>
        <button id="button"type="submit">Add-Contact</button>
    </form> 
    <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>